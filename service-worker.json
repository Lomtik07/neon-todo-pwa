// service-worker.js - УПРОЩЕННЫЙ ВАРИАНТ
const CACHE_NAME = 'neon-todo-v2.0';
const STATIC_FILES = [
  '/',
  '/index.html',
  '/manifest.json'
];

// Установка
self.addEventListener('install', event => {
  console.log('[SW] Установка');
  event.waitUntil(
    caches.open(CACHE_NAME)
      .then(cache => cache.addAll(STATIC_FILES))
      .then(() => self.skipWaiting())
  );
});

// Активация
self.addEventListener('activate', event => {
  console.log('[SW] Активация');
  event.waitUntil(
    caches.keys().then(keys =>
      Promise.all(
        keys.filter(key => key !== CACHE_NAME)
          .map(key => caches.delete(key))
      )
    ).then(() => self.clients.claim())
  );
});

// Перехват запросов
self.addEventListener('fetch', event => {
  event.respondWith(
    caches.match(event.request)
      .then(response => response || fetch(event.request))
      .catch(() => {
        if (event.request.mode === 'navigate') {
          return caches.match('/');
        }
        return new Response('Офлайн', { status: 503 });
      })
  );
});

// ПРОСТАЯ СИНХРОНИЗАЦИЯ - БЕЗ ОЖИДАНИЯ ОТВЕТА ОТ КЛИЕНТА
self.addEventListener('sync', event => {
  console.log('[SW] Событие синхронизации:', event.tag);
  
  if (event.tag === 'sync-tasks' || event.tag === 'manual-sync') {
    event.waitUntil(
      // Просто имитируем синхронизацию без запросов к клиенту
      new Promise(resolve => {
        console.log('[SW] Начинаем синхронизацию...');
        
        // Имитация задержки
        setTimeout(() => {
          console.log('[SW] Синхронизация завершена');
          
          // Отправляем уведомление клиентам
          self.clients.matchAll().then(clients => {
            clients.forEach(client => {
              client.postMessage({
                type: 'SYNC_COMPLETE',
                data: {
                  timestamp: new Date().toISOString(),
                  message: 'Задачи синхронизированы'
                }
              });
            });
          });
          
          // Показываем уведомление
          self.registration.showNotification('✅ Синхронизация', {
            body: 'Ваши задачи синхронизированы',
            icon: '/icons/icon-192x192.png',
            tag: 'sync-done'
          });
          
          resolve();
        }, 1000); // 1 секунда задержки
      })
    );
  }
});

// Push уведомления
self.addEventListener('push', event => {
  const options = {
    body: event.data ? event.data.text() : 'Новое уведомление',
    icon: '/icons/icon-192x192.png',
    badge: '/icons/icon-72x72.png'
  };
  
  event.waitUntil(
    self.registration.showNotification('Неоновый To-Do', options)
  );
});

// Клики по уведомлениям
self.addEventListener('notificationclick', event => {
  event.notification.close();
  event.waitUntil(
    clients.openWindow('/')
  );
});

// Простые сообщения от клиента
self.addEventListener('message', event => {
  console.log('[SW] Сообщение от клиента:', event.data);
  
  if (event.data === 'skipWaiting') {
    self.skipWaiting();
  }
});
